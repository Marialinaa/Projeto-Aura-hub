# Exemplo de variáveis de ambiente para deploy no Railway
# Prefira definir uma URL completa: DB_URL ou MYSQL_URL (a aplicação procura DB_URL antes)

# URL completa (privada) — fornecida pelo plugin MySQL do Railway
# ex: mysql://root:password@mysql-e57r.railway.internal:3306/railway
MYSQL_URL=

# URL pública (TCP proxy) — opcional
MYSQL_PUBLIC_URL=

# Alternativa: variáveis individuais (somente se você não usar MYSQL_URL)
MYSQLHOST=
MYSQLPORT=3306
MYSQLUSER=root
MYSQLPASSWORD=
MYSQLDATABASE=railway

# Override ou compatibilidade com DB_* usados pela aplicação
DB_URL=
DB_HOST=
DB_PORT=3306
DB_USER=
DB_PASSWORD=
DB_NAME=

# App settings
PORT=3001
CORS_ORIGIN=
